<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="caimi.web.mapper.UserMapper">
	<select id="loadUserByUserNmae" resultType="caimi.web.beans.User">
		SELECT * FROM user WHERE username=#{username}
	</select>
	<update id="updateUserEmail">
		UPDATE user set email=#{email} WHERE id=#{id}
	</update>
	<update id="updateUserEnabled">
		UPDATE user set enabled=#{enabled} WHERE uid=#{uid}
	</update>
	<delete id="deleteUserById">
		DELETE  FROM user WHERE id=#{id}
	</delete>
	<select id="getUserById" resultType="BaseResultMap">
		<!--
		SELECT u.*,r.`id` AS rid,r.`name` AS rname FROM user u,roles r,roles_user ru WHERE u.`id`=ru.`uid` AND
        r.`id`=ru.`rid` AND u.`id`=#{id}
        -->
        SELECT * FROM user WHERE id=#{id}
	</select>
	<insert id="reg" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO user set username=#{username},password=#{password}
	</insert>
</mapper>
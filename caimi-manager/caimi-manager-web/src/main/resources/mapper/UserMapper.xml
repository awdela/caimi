<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="caimi.web.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="caimi.web.beans.UserEntity" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="enable" property="enable" jdbcType="BIT" />
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="userface" property="userface" jdbcType="VARCHAR" />
    <result column="regTime" property="regTime" jdbcType="TIMESTAMP" />
  </resultMap>
	<select id="loadUserByUserNmae" resultType="caimi.web.beans.UserEntity">
		SELECT * FROM user WHERE username=#{username}
	</select>
	<update id="updateUserEmail">
		UPDATE user set email=#{email} WHERE id=#{id}
	</update>
	<update id="updateUserEnabled">
		UPDATE user set enabled=#{enabled} WHERE uid=#{uid}
	</update>
	<delete id="deleteUserById">
		DELETE  FROM user WHERE id=#{id}
	</delete>
	<select id="getUserById" resultType="caimi.web.beans.UserEntity">
		<!--
		SELECT u.*,r.`id` AS rid,r.`name` AS rname FROM user u,roles r,roles_user ru WHERE u.`id`=ru.`uid` AND
        r.`id`=ru.`rid` AND u.`id`=#{id}
        -->
        SELECT * FROM user WHERE id=#{id}
	</select>
	<insert id="reg" parameterType="caimi.web.beans.UserEntity" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO user (id, username, password, enable, email, userface, regTime) 
		values (#{id,jdbcType=VARCHAR}, #{username,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, 
      #{enable,jdbcType=BIT}, #{email,jdbcType=VARCHAR}, #{userface,jdbcType=VARCHAR}, #{regTime,jdbcType=TIMESTAMP})
	</insert>
</mapper>